<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btncities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="268dp"
        android:onClick="listarCiudades"
        android:text="@string/btn_ciudades"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/welcomemsj"
        app:layout_constraintTop_toBottomOf="@+id/btnactual" />

    <TextView
        android:id="@+id/welcomemsj"
        android:layout_width="241dp"
        android:layout_height="0dp"
        android:layout_marginTop="238dp"
        android:text="@string/msj_inicio"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnactual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.395" />

    <Button
        android:id="@+id/btnactual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:onClick="irDetalle"
        android:text="@string/btn_clima"
        app:barrierAllowsGoneWidgets="true"
        app:layout_constraintBottom_toTopOf="@+id/btncities"
        app:layout_constraintStart_toStartOf="@+id/btncities"
        app:layout_constraintTop_toBottomOf="@+id/welcomemsj" />

</androidx.constraintlayout.widget.ConstraintLayout>